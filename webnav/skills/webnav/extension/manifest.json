{
	"manifest_version": 3,
	"name": "WebNav - Claude Browser Control",
	"version": "1.1.0",
	"description": "Allows Claude Code to control browser tabs via native messaging",
	"permissions": [
		"activeTab",
		"tabs",
		"nativeMessaging",
		"scripting",
		"storage",
		"tabGroups",
		"debugger"
	],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-main.js"],
			"run_at": "document_start",
			"world": "MAIN"
		},
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
