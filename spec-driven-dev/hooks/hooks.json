{
  "description": "Auto-build CLI on first session",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/build-cli.sh",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
